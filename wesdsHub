<body>
    <div class="container">
        <div id="adBlockerWarning">
            <strong>Ad Blocker Detected!</strong> Please disable your ad blocker to support our website and view all content.
        </div>
        
        <header>
            <h1>Script Showcase</h1>
            <p>Click on a script title to expand and view its content</p>
        </header>

        <div id="scriptContainer"></div>
    </div>

    <script>
        const scripts = [
            { id: 1, title: "Script 1", content: "console.log('Hello from Script 1');" },
            { id: 2, title: "Script 2", content: "alert('This is Script 2');" },
            { id: 3, title: "Script 3", content: "document.body.style.backgroundColor = 'blue';" },
        ];

        function createScriptSection(script) {
            return `
                <div class="script-section">
                    <div class="script-title" onclick="toggleScript(${script.id})">
                        <span>${script.title}</span>
                        <span id="toggle-${script.id}">▼</span>
                    </div>
                    <div id="content-${script.id}" class="script-content">
                        <pre><code>${script.content}</code></pre>
                    </div>
                </div>
            `;
        }

        function toggleScript(id) {
            const content = document.getElementById(`content-${id}`);
            const toggle = document.getElementById(`toggle-${id}`);
            if (content.style.display === 'block') {
                content.style.display = 'none';
                toggle.textContent = '▼';
            } else {
                content.style.display = 'block';
                toggle.textContent = '▲';
            }
        }

        window.onload = function() {
            const container = document.getElementById('scriptContainer');
            scripts.forEach(script => {
                container.innerHTML += createScriptSection(script);
            });

            // Simple ad blocker detection
            setTimeout(() => {
                if (window.google_ad_status === 1) {
                    console.log('No ad blocker detected');
                } else {
                    document.getElementById('adBlockerWarning').style.display = 'block';
                }
            }, 1000);
        };
    </script>

    <!-- This script is used to detect ad blockers. Replace with your actual AdSense code when ready. -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
</body>
</html>
